{
  "name": "frello",
  "version": "1.0.0",
  "description": "A Trello clone",
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "webpack-dev-server --mode development --open --hot",
    "start:server": "nodemon -w server -e js,ts,json --exec \"ts-node server\"",
    "build": "npm run build:server && npm run build:client",
    "build:client": "webpack --mode production",
    "build:server": "tsc",
    "lint": "eslint {server,client}/**/*.{ts,js,tsx,jsx}",
    "lint:fix": "eslint --fix {server,client}/**/*.{ts,js,tsx,jsx}",
    "format": "prettier --write {server,client}/**/*.{ts,js,tsx,jsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhonnold/frello.git"
  },
  "author": "Jay Honnold <jayhonnold@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhonnold/frello/issues"
  },
  "homepage": "https://github.com/jhonnold/frello#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "bulma": "^0.8.2",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nord": "^0.2.1",
    "normalize-scss": "^7.0.1",
    "on-finished": "^2.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@hot-loader/react-dom": "^16.13.0",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "autoprefixer": "^9.7.5",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.4",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.2",
    "react-hot-loader": "^4.12.20",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^7.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-manifest-plugin": "^2.2.0"
  }
}
