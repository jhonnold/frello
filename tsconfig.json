{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist/server",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["es6", "DOM"],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "typeRoots": ["./server/@types", "node_modules/@types"]
    },
    "include": ["./server/**/*.ts"]
}
